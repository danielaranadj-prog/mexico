---
/**
 * FlightSearch.astro
 * Widget de búsqueda de vuelos que redirige a Skyscanner
 * con affiliate tracking desde Firestore
 */
import { getSkyscannerConfig } from '../lib/fetchAffiliates';

const skyscannerConfig = await getSkyscannerConfig();
const affiliateTag = skyscannerConfig.affiliateTag;
const isEnabled = skyscannerConfig.enabled;

interface Props {
  variant?: 'sidebar' | 'inline' | 'full';
  defaultOrigin?: string;
  defaultDestination?: string;
}

const { 
  variant = 'sidebar', 
  defaultOrigin = '',
  defaultDestination = ''
} = Astro.props;
---

{isEnabled && (

<div class={`flight-widget ${variant}`}>
    <div class="widget-header">
        <span class="widget-icon">✈️</span>
        <h4>Buscar Vuelos</h4>
    </div>
    
    <form class="flight-form" id="flightSearchForm">
        <div class="input-group">
            <label for="flight-origin">Origen</label>
            <input 
                type="text" 
                id="flight-origin" 
                name="origin" 
                placeholder="Ciudad o aeropuerto"
                value={defaultOrigin}
                required
            />
        </div>
        
        <div class="input-group">
            <label for="flight-destination">Destino</label>
            <input 
                type="text" 
                id="flight-destination" 
                name="destination" 
                placeholder="¿A dónde viajas?"
                value={defaultDestination}
                required
            />
        </div>
        
        <div class="input-row">
            <div class="input-group half">
                <label for="flight-date">Salida</label>
                <input 
                    type="date" 
                    id="flight-date" 
                    name="outbound"
                    required
                />
            </div>
            <div class="input-group half">
                <label for="flight-return">Regreso</label>
                <input 
                    type="date" 
                    id="flight-return" 
                    name="inbound"
                />
            </div>
        </div>
        
        <button type="submit" class="search-btn">
            <span>Buscar Vuelos</span>
            <span class="arrow">→</span>
        </button>
    </form>
    
    <p class="widget-note">
        Buscamos en +700 aerolíneas
    </p>
</div>
)}

<script is:inline>
    document.getElementById('flightSearchForm')?.addEventListener('submit', function(e) {
        e.preventDefault();
        const form = e.target;
        const origin = form.origin.value.trim();
        const destination = form.destination.value.trim();
        const outbound = form.outbound.value;
        const inbound = form.inbound.value;
        
        // Construir URL de Skyscanner
        let url = `https://www.skyscanner.com/transport/flights/${origin}/${destination}/${outbound.replace(/-/g, '')}`;
        if (inbound) {
            url += `/${inbound.replace(/-/g, '')}`;
        }
        url += '/?adultsv2=1&cabinclass=economy&childrenv2=&ref=home&preferdirects=false&outboundaltsenabled=false&inboundaltsenabled=false';
        
        // Abrir en nueva pestaña
        window.open(url, '_blank');
    });
</script>

