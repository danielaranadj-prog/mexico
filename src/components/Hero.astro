---
/* Hero con efecto Parallax y altura optimizada */
---
<header class="hero">
  <div class="video-background" id="parallax-bg">
    <video autoplay muted loop playsinline class="hero-video">
      <source src="/mexico/intro.mp4" type="video/mp4" />
    </video>
    <div class="overlay"></div>
  </div>

  <div class="hero-content">
    <span class="welcome">Tu próximo destino</span>
    <h1 class="hero-title">MÉXICO</h1>
    <p class="hero-slogan">Del fuego del asado al hielo eterno.</p>
  </div>
</header>

<script>
  // Lógica de Parallax suave
  const initParallax = () => {
    const bg = document.getElementById('parallax-bg');
    
    window.addEventListener('scroll', () => {
      const scrollValue = window.scrollY;
      if (bg && scrollValue < window.innerHeight) {
        // El video se mueve al 30% de la velocidad del scroll hacia abajo
        bg.style.transform = `translateY(${scrollValue * 0.3}px)`;
      }
    });
  };

  initParallax();
  // Reiniciar si usas transiciones de Astro
  document.addEventListener('astro:after-swap', initParallax);
</script>

<style>
  .hero {
    position: relative;
    width: 100%;
    height: 55vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: #000;
  }

  .video-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 120%; 
    z-index: 1;
    will-change: transform;
  }

  .hero-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.4),
      rgba(15, 23, 42, 0.8)
    );
    z-index: 2;
  }

  .hero-content {
    position: relative;
    z-index: 3;
    color: #FFFFFF;
    text-align: center;
    padding: 0 20px;
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .welcome {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 3px;
    text-transform: uppercase;
    background: linear-gradient(135deg, var(--gold), #fcd34d);
    color: #1a202c;
    padding: 8px 20px;
    border-radius: 50px;
    margin-bottom: 15px;
    box-shadow: 0 4px 20px rgba(244, 185, 66, 0.4);
  }

  /* Shimmer effect on hero title */
  .hero-title {
    font-size: clamp(3rem, 10vw, 5.5rem);
    font-weight: 800;
    margin: 10px 0;
    line-height: 1;
    background: linear-gradient(
      90deg, 
      #E11D48 0%,   /* Rosa Mexicano */
      #0891B2 25%,  /* Turquesa */
      #ffffff 50%,  /* Brillo Blanco */
      #D97706 75%,  /* Cempasúchil/Ambar */
      #E11D48 100%
    );
    background-size: 400% auto;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: shimmer 5s ease-in-out infinite;
    text-shadow: none;
    filter: drop-shadow(0 4px 15px rgba(0,0,0,0.3));
  }

  .hero-slogan {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.95);
    max-width: 500px;
    margin: 0 auto;
    font-family: 'IBM Plex Serif', serif;
    font-weight: 400;
    line-height: 1.6;
    animation: fadeInUp 0.8s ease-out 0.2s forwards;
    opacity: 0;
  }

  @media (max-width: 600px) {
    .hero { height: 50vh; }
    .hero-title { font-size: 3.5rem; }
    .welcome { font-size: 0.65rem; padding: 6px 16px; }
  }
  
  .hero-content, 
  .hero-content p {
    color: #ffffff !important; 
  }
</style>