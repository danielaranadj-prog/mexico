---
/**
 * MoneyTip Component
 * Visual infographic for currency exchange tips
 */
interface Props {
  tip: {
    from: string;
    where: string;
    result: string;
    warning?: string;
  };
}

const { tip } = Astro.props;
---

<div class="money-container">
  <h3 class="money-title">
    <i class="fas fa-dollar-sign"></i>
    Guía Rápida del Dinero
  </h3>
  
  <div class="money-flow">
    <div class="money-step">
      <div class="step-circle from">
        <i class="fas fa-money-bill-wave"></i>
      </div>
      <span class="step-label">{tip.from}</span>
    </div>
    
    <div class="money-arrow">
      <i class="fas fa-arrow-right"></i>
    </div>
    
    <div class="money-step">
      <div class="step-circle where">
        <i class="fas fa-store"></i>
      </div>
      <span class="step-label">{tip.where}</span>
    </div>
    
    <div class="money-arrow">
      <i class="fas fa-arrow-right"></i>
    </div>
    
    <div class="money-step">
      <div class="step-circle result">
        <i class="fas fa-chart-line"></i>
      </div>
      <span class="step-label result-label">{tip.result}</span>
    </div>
  </div>
  
  {tip.warning && (
    <div class="money-warning">
      <i class="fas fa-exclamation-circle"></i>
      {tip.warning}
    </div>
  )}
</div>

<style>
  .money-container {
    margin: 40px 0;
    padding: 30px;
    background: linear-gradient(135deg, var(--card-bg) 0%, rgba(244, 185, 66, 0.05) 100%);
    border-radius: 20px;
    border: 1px solid var(--border);
  }

  .money-title {
    font-size: 1.1rem;
    color: var(--title);
    margin: 0 0 30px 0;
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 700;
  }

  .money-title i {
    color: var(--gold);
  }

  .money-flow {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
    flex-wrap: wrap;
  }

  .money-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
  }

  .step-circle {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.3rem;
  }

  .step-circle.from {
    background: linear-gradient(135deg, #22c55e, #4ade80);
    color: white;
  }

  .step-circle.where {
    background: linear-gradient(135deg, var(--celeste), #93c5fd);
    color: white;
  }

  .step-circle.result {
    background: linear-gradient(135deg, var(--gold), #fcd34d);
    color: #1a202c;
  }

  .step-label {
    font-size: 0.8rem;
    color: var(--text-secondary);
    text-align: center;
    max-width: 100px;
  }

  .result-label {
    font-weight: 800;
    color: var(--gold);
    font-size: 0.9rem;
  }

  .money-arrow {
    color: var(--text-secondary);
    opacity: 0.5;
  }

  .money-warning {
    margin-top: 25px;
    padding: 15px;
    background: rgba(239, 68, 68, 0.1);
    border-radius: 10px;
    font-size: 0.85rem;
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .money-warning i {
    color: #ef4444;
  }

  @media (max-width: 500px) {
    .money-flow {
      flex-direction: column;
    }
    
    .money-arrow {
      transform: rotate(90deg);
    }
  }
</style>
