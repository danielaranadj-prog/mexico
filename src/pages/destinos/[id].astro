---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro'; 
import Navbar from '../../components/Navbar.astro';
import FlightSearch from '../../components/FlightSearch.astro';
import HotelWidget from '../../components/HotelWidget.astro';
import AdsenseWidget from '../../components/AdsenseWidget.astro';
import FAQ from '../../components/FAQ.astro';
import LeadMagnet from '../../components/LeadMagnet.astro';

// 1. Generamos las rutas leyendo la carpeta "content/destinos"
export async function getStaticPaths() {
  const destinos = await getCollection('destinos');
  
  return destinos.map((destino) => ({
    params: { id: destino.slug },
    props: { destino },
  }));
}

// 2. Extraemos los datos y renderizamos el contenido
const { destino } = Astro.props;
const { Content } = await destino.render();
const { 
  title, img, desc, historia, 
  // V3 fields
  checklist, barrios, experiencias, gastronomia, transporte, mapa,
  leadMagnet, premiumGuide, faqs,
  // Legacy fields
  secciones, tours, dashboard, zonas, ctas,
  actividades, atracciones, escapadas
} = destino.data;

// Colores para zonas
const zonaColors = {
  trendy: { bg: 'rgba(168, 85, 247, 0.1)', border: '#a855f7', text: '#a855f7' },
  elegante: { bg: 'rgba(59, 130, 246, 0.1)', border: '#3b82f6', text: '#3b82f6' },
  bohemio: { bg: 'rgba(249, 115, 22, 0.1)', border: '#f97316', text: '#f97316' },
  moderno: { bg: 'rgba(16, 185, 129, 0.1)', border: '#10b981', text: '#10b981' },
};

// Colores para CTAs
const ctaColors = {
  emerald: { bg: 'linear-gradient(135deg, #10b981, #059669)', hover: '#047857' },
  blue: { bg: 'linear-gradient(135deg, #3b82f6, #2563eb)', hover: '#1d4ed8' },
  gold: { bg: 'linear-gradient(135deg, #F4B942, #d97706)', hover: '#b45309' },
  purple: { bg: 'linear-gradient(135deg, #8b5cf6, #7c3aed)', hover: '#6d28d9' },
};
---

<Layout title={`${title} | Destinos M√©xico`}>
  <Navbar />
  
  <!-- 1. HERO RENOVADO -->
  <header class="dest-hero" style={`background-image: url(${img})`}>
    <div class="overlay"></div>
    <div class="hero-text">
      <h1>{title}</h1>
      <p class="hero-subtitle">Tu Gu√≠a Completa para el Viaje Perfecto</p>
      <p class="slogan">{desc}</p>
      <a href="#lead-magnet" class="hero-cta">
        <i class="fas fa-download"></i> Descarga tu Itinerario GRATIS
      </a>
    </div>
  </header>

  <main class="container">
    <!-- Sin bot√≥n volver para evitar fricci√≥n -->

    <!-- 2. LEAD MAGNET (Above the Fold) -->
    {leadMagnet && (
      <section id="lead-magnet" class="lead-magnet-above">
        <div class="lead-magnet-card">
          <div class="lead-magnet-content">
            <span class="tag-gratis">üìÖ GRATIS</span>
            {leadMagnet.subtitulo && <p class="lead-subtitle">{leadMagnet.subtitulo}</p>}
            <h2>{leadMagnet.titulo}</h2>
            <p>{leadMagnet.descripcion}</p>
            {leadMagnet.beneficios && (
              <ul class="lead-benefits">
                {leadMagnet.beneficios.map((b) => (
                  <li><i class="fas fa-check-circle"></i> {b}</li>
                ))}
              </ul>
            )}
            <div class="lead-trust">
              <span>üîí Sin spam</span>
              <span>‚ö° Descarga instant√°nea</span>
            </div>
          </div>
          <a href={leadMagnet.archivo} class="lead-cta-btn">
            <i class="fas fa-download"></i> Descargar Ahora
          </a>
        </div>
      </section>
    )}

    <!-- 3. CHECKLIST DE SUPERVIVENCIA PORTE√ëA -->
    {checklist && checklist.length > 0 && (
      <section class="checklist-section">
        <h2>‚úÖ Checklist de Supervivencia Porte√±a</h2>
        <p class="checklist-intro">Resuelve estos {checklist.length} puntos y viaja tranquilo.</p>
        <div class="checklist-grid">
          {checklist.map((item) => (
            <div class="checklist-item">
              <div class="checklist-emoji">{item.emoji}</div>
              <div class="checklist-content">
                <h3>{item.titulo}</h3>
                <p set:html={item.detalle.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')}></p>
                {item.cta && item.ctaLink && (
                  <a href={item.ctaLink} target="_blank" rel="noopener" class={`checklist-cta ${item.ctaRecomendado ? 'recomendado' : ''}`}>
                    {item.ctaRecomendado && <span class="rec-badge">Recomendado</span>}
                    {item.cta}
                  </a>
                )}
              </div>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- ========== NUEVO: ZONAS ========== -->
    {zonas && zonas.length > 0 && (
      <section class="zonas-section">
        <h2>üó∫Ô∏è Zonas Recomendadas</h2>
        <div class="zonas-grid">
          {zonas.map((zona) => {
            const colors = zonaColors[zona.tipo] || zonaColors.trendy;
            return (
              <div class="zona-card" style={`background: ${colors.bg}; border-color: ${colors.border}`}>
                <span class="zona-badge" style={`background: ${colors.border}; color: white`}>
                  {zona.tipo}
                </span>
                <h3>{zona.nombre}</h3>
                <p>{zona.descripcion}</p>
              </div>
            );
          })}
        </div>
      </section>
    )}

    <!-- ========== NUEVO: CTAs ========== -->
    {ctas && ctas.length > 0 && (
      <section class="ctas-section">
        {ctas.map((cta) => {
          const colors = ctaColors[cta.color] || ctaColors.gold;
          return (
            <a href={cta.link} target="_blank" rel="noopener" class="cta-box">
              <div class="cta-content">
                <h3>{cta.titulo}</h3>
                <p>{cta.descripcion}</p>
              </div>
              <button class="cta-button" style={`background: ${colors.bg}`}>
                {cta.boton} <i class="fas fa-arrow-right"></i>
              </button>
            </a>
          );
        })}
      </section>
    )}

    <!-- ========== 6. TOP EXPERIENCIAS (V3) ========== -->
    {experiencias && experiencias.length > 0 && (
      <section class="experiencias-section">
        <h2>üéØ Top {experiencias.length} Cosas que hacer en {title}</h2>
        <div class="experiencias-list">
          {experiencias.map((exp, index) => (
            <div class="experiencia-item">
              <div class="exp-number">{index + 1}</div>
              <div class="exp-icon">{exp.icono}</div>
              <div class="exp-content">
                <div class="exp-header">
                  <h3>{exp.titulo}</h3>
                  <span class="exp-tag" style={`background: ${exp.tagColor}`}>{exp.tag}</span>
                </div>
                <p>{exp.descripcion}</p>
                {exp.cta && exp.ctaLink && (
                  <a href={exp.ctaLink} target="_blank" rel="noopener" class="exp-cta">
                    üëâ {exp.cta}
                  </a>
                )}
              </div>
            </div>
          ))}
        </div>
        <div class="blog-link-box">
          <p>üåü ¬øQuieres m√°s consejos y experiencias?</p>
          <a href="https://blog.instantetrips.com/?tag=Mexico" target="_blank" rel="noopener" class="blog-link">
            Visita nuestro Blog <i class="fas fa-external-link-alt"></i>
          </a>
        </div>
      </section>
    )}

    <!-- ========== QU√â VISITAR ========== -->
    {atracciones && atracciones.length > 0 && (
      <section class="atracciones-section">
        <h2>üèõÔ∏è Qu√© Visitar</h2>
        <div class="atracciones-grid">
          {atracciones.map((lugar) => (
            <div class="atraccion-card">
              {lugar.imagen && (
                <div class="atraccion-imagen" style={`background-image: url('${lugar.imagen}')`}>
                  {lugar.gratis && <span class="tag-gratis">GRATIS</span>}
                  {lugar.precio && <span class="tag-precio">{lugar.precio}</span>}
                </div>
              )}
              <div class="atraccion-content">
                <span class="atraccion-zona">{lugar.zona}</span>
                <h3>{lugar.nombre}</h3>
                <p>{lugar.descripcion}</p>
                {lugar.link && (
                  <a href={lugar.link} target="_blank" rel="noopener" class="atraccion-link">
                    Ver m√°s <i class="fas fa-arrow-right"></i>
                  </a>
                )}
              </div>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- ========== 4. BARRIOS (V3) ========== -->
    {barrios && barrios.length > 0 && (
      <section class="barrios-section">
        <h2>üèòÔ∏è ¬øD√≥nde alojarse y pasear? Entendiendo la ciudad</h2>
        <div class="barrios-grid">
          {barrios.map((barrio) => (
            <div class="barrio-card">
              {barrio.imagen && (
                <div class="barrio-imagen" style={`background-image: url('${barrio.imagen}')`}>
                  <span class="barrio-vibra" style={barrio.colorTag ? `background: ${barrio.colorTag}` : ''}>
                    {barrio.vibra}
                  </span>
                </div>
              )}
              <div class="barrio-content">
                <h3>{barrio.nombre}</h3>
                <p class="barrio-ideal">
                  <strong>Ideal para:</strong> {barrio.idealPara}
                </p>
              </div>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- ========== C√ìMO LLEGAR ========== -->
    {transporte && transporte.aeropuerto && (
      <section class="transporte-section">
        <h2>‚úàÔ∏è C√≥mo Llegar del Aeropuerto</h2>
        <div class="aeropuerto-info">
          <div class="aeropuerto-header">
            <h3>{transporte.aeropuerto.nombre}</h3>
            <span class="distancia-badge">{transporte.aeropuerto.distancia}</span>
          </div>
          <div class="opciones-transporte">
            {transporte.aeropuerto.opciones.map((op) => (
              <div class="opcion-card">
                <div class="opcion-metodo">{op.metodo}</div>
                <div class="opcion-details">
                  <span class="opcion-tiempo"><i class="far fa-clock"></i> {op.tiempo}</span>
                  <span class="opcion-precio"><i class="fas fa-tag"></i> {op.precio}</span>
                </div>
                {op.link && (
                  <a href={op.link} target="_blank" rel="noopener" class="opcion-btn">
                    Reservar <i class="fas fa-arrow-right"></i>
                  </a>
                )}
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- ========== ESCAPADAS ========== -->
    {escapadas && escapadas.length > 0 && (
      <section class="escapadas-section">
        <h2>üöå Escapadas desde {title}</h2>
        <div class="escapadas-grid">
          {escapadas.map((escapada) => (
            <a href={escapada.link || '#'} target={escapada.link ? '_blank' : '_self'} rel="noopener" class="escapada-card">
              {escapada.imagen && (
                <div class="escapada-imagen" style={`background-image: url('${escapada.imagen}')`}>
                  <div class="escapada-tags">
                    <span class="escapada-distancia">{escapada.distancia}</span>
                    <span class="escapada-tiempo">{escapada.tiempo}</span>
                  </div>
                </div>
              )}
              <div class="escapada-content">
                <h3>{escapada.nombre}</h3>
                <p>{escapada.descripcion}</p>
              </div>
            </a>
          ))}
        </div>
      </section>
    )}

    <!-- ========== GASTRONOM√çA ========== -->
    {gastronomia && gastronomia.length > 0 && (
      <section class="gastronomia-section">
        <h2>üçΩÔ∏è D√≥nde Comer</h2>
        <div class="gastronomia-grid">
          {gastronomia.map((cat) => (
            <div class="gastronomia-categoria">
              <h3>{cat.categoria}</h3>
              <div class="lugares-lista">
                {cat.lugares.map((lugar) => (
                  <div class="lugar-item">
                    <span class="lugar-nombre">{lugar.nombre}</span>
                    <span class="lugar-zona">{lugar.zona}</span>
                    <span class="lugar-precio">{lugar.precio}</span>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- ========== MAPA ========== -->
    {mapa && (
      <section class="mapa-section">
        <h2>üó∫Ô∏è Mapa de {title}</h2>
        <div class="mapa-container">
          <iframe 
            src={`https://www.openstreetmap.org/export/embed.html?bbox=${parseFloat(mapa.centro.split(',')[1]) - 0.1}%2C${parseFloat(mapa.centro.split(',')[0]) - 0.05}%2C${parseFloat(mapa.centro.split(',')[1]) + 0.1}%2C${parseFloat(mapa.centro.split(',')[0]) + 0.05}&layer=mapnik`}
            style="border: 0; width: 100%; height: 400px; border-radius: 16px;"
            loading="lazy"
          ></iframe>
          <a href={`https://www.google.com/maps?ll=${mapa.centro}&z=${mapa.zoom}`} target="_blank" rel="noopener" class="mapa-link">
            <i class="fas fa-external-link-alt"></i> Abrir en Google Maps
          </a>
        </div>
      </section>
    )}

    <AdsenseWidget slot="inline" />

    {leadMagnet && (
      <LeadMagnet leadMagnet={leadMagnet} destinoTitle={title} />
    )}

    {faqs && faqs.length > 0 && (
      <FAQ faqs={faqs} destinoTitle={title} />
    )}

    <!-- 11. MAPA (ya est√° arriba) -->

    <!-- 12. CIERRE PREMIUM (Final Upsell) -->
    {premiumGuide && (
      <section class="premium-close-section">
        <div class="premium-close-card">
          <div class="premium-badge">‚≠ê PREMIUM</div>
          <h2>{premiumGuide.titulo}</h2>
          <p class="premium-subtitle">{premiumGuide.subtitulo}</p>
          <div class="premium-benefits">
            {premiumGuide.beneficios.map((b) => (
              <div class="benefit-item"><i class="fas fa-check-circle"></i> {b}</div>
            ))}
          </div>
          <div class="premium-price">
            <span class="price-original">~~{premiumGuide.precioOriginal} {premiumGuide.moneda}~~</span>
            <span class="price-tag">${premiumGuide.precioOferta} {premiumGuide.moneda}</span>
            <span class="price-note">Acceso de por vida ‚Ä¢ Actualizaciones gratis</span>
          </div>
          <a href={premiumGuide.link} class="premium-final-btn">
            <i class="fas fa-unlock"></i> OBTENER GU√çA PREMIUM AHORA
          </a>
        </div>
      </section>
    )}

    <!-- Vuelos y Hoteles -->
    <section class="travel-widgets-section">
      <div class="section-header">
        <h2>‚úàÔ∏è Reserv√° tu Viaje</h2>
        <span class="badge">Reservar</span>
      </div>
      <div class="travel-widgets">
        <FlightSearch defaultDestination={title} />
        <HotelWidget defaultDestination={title} />
      </div>
      <AdsenseWidget slot="inline" className="mt-ads" />
    </section>
  </main>
</Layout>

